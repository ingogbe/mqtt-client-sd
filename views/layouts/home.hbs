		<!-- CSS -->
		<link rel="stylesheet" type="text/css" href="/css/bootstrap-4.0.0-dist/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/css/fontawesome-free-5.0.6/web-fonts-with-css/css/fontawesome-all.css">

		<!-- My CSS -->
		<link rel="stylesheet" type="text/css" href="/css/custom_tooltip.css">
		<link rel="stylesheet" type="text/css" href="/css/bootstrap-validator-fix.css">

		<!-- JS -->
		<script type="text/javascript" src="/js/jquery-3.3.1-dist/jquery.min.js"></script>
		<script type="text/javascript" src="/js/popper-1.12.9-dist/popper.min.js"></script>
		<script type="text/javascript" src="/js/bootstrap-4.0.0-dist/bootstrap.min.js"></script>
		<script type="text/javascript" src="/js/bootstrap-validator/validator.min.js"></script>
		<script type="text/javascript" src="/js/jQuery-Mask-Plugin/jquery.mask.min.js"></script>


		<title>ROAR</title>

	</head>
	<body>

		<nav class="navbar sticky-top navbar-expand-lg navbar-dark" style="background-color: #561111;">
			<a class="navbar-brand" href="/dashboard">
				<img src="/ico/icon-white.png" width="30" height="30" alt="ROAR" class="d-inline-block align-top">
				ROAR
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item">
						<a class="nav-link" href="/dashboard">Dashboard</a>
					</li>
					<li class="nav-item ml-3" data-toggle="modal" data-target=".bd-example-modal-sm">
						<button type="button" class="btn btn-light" data-toggle="modal" data-target=".bd-modal-follow">Subscribe</button>
					</li>
					<li class="nav-item ml-3" data-toggle="modal" data-target=".bd-example-modal-sm">
						<button type="button" class="btn btn-light" data-toggle="modal" data-target=".bd-modal-publish">Publish</button>
					</li>
				</ul>

				<ul class="navbar-nav">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						{{user}}
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="/profile">Meu perfil</a>
							<a class="dropdown-item" href="/logout">Sair</a>
						</div>
					</li>
				</ul>


			</div>
		</nav>

		<div class="modal fade bd-modal-follow" tabindex="-1" role="dialog" aria-labelledby="myFollowModal" aria-hidden="true">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Subscribe</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form action="/follow" method="post">
							<div class="form-group">
								<label for="followuser">User</label>
								<input type="text" class="form-control" id="followuser" name="followuser" aria-describedby="followuser" placeholder="Enter username">
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<div class="modal fade bd-modal-publish" tabindex="-1" role="dialog" aria-labelledby="myPublishModal" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Publish</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form action="/publish" method="post">
							<div class="form-group">
								<label for="publishmessage">Message</label>
								<textarea class="form-control" id="publishmessage" name="publishmessage" rows="3" placeholder="Enter message"></textarea>
							</div>
							<button type="submit" class="btn btn-primary">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>

		<div class="content-body">
			{{{body}}}
		</div>

		<script type="text/javascript">
			$(document).ready(function() {

				var url = window.location;

				$('ul.navbar-nav a').filter(function() {
					
					if(this.href == url.href){
						$(this).addClass('active');
						$(this).parent().parent().addClass('active');
					}

					return this.href == url.href;
				}).parent().addClass('active');

			});
		</script>


		
	</body>
</html>

